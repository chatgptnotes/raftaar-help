<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EBEB"
    android:padding="24dp"
    tools:context=".activities.ForgetPasswordActivity">

    <!-- Back Button at Top Left -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/backwardarrowicon"
        app:tint="#FBC02D"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:foregroundGravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Forget Password"
            android:textSize="24sp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"/>

        <!-- Mobile Number Input -->
        <EditText
            android:id="@+id/mobileEditText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:hint="Enter your registered mobile number"
            android:inputType="phone"
            android:background="@drawable/rounded_white_background"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Send OTP Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendOtp"
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:background="@drawable/proceed_button_background"
            android:textColor="@color/white" />

        <!-- OTP Input -->
        <EditText
            android:id="@+id/otpEditText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Enter OTP"
            android:layout_gravity="center"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/rounded_white_background"
            android:textColor="#333333"
            android:textSize="16sp"
            android:enabled="true" />

        <!-- Verify OTP Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerifyOtp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Verify OTP"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/proceed_button_background"
            android:textColor="@color/white"
            android:enabled="true" />

        <!-- New Password Input -->
        <EditText
            android:id="@+id/newPasswordEditText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_white_background"
            android:textColor="#333333"
            android:textSize="16sp"
            android:enabled="true" />

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Confirm Password"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/rounded_white_background"
            android:textColor="#333333"
            android:textSize="16sp"
            android:enabled="true" />

        <!-- Reset Password Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResetPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/proceed_button_background"
            android:textColor="@color/white"
            android:enabled="true" />

    </LinearLayout>
</RelativeLayout>
