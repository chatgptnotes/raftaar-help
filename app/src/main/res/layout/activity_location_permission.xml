<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/location_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/location_holder_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn on your location"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To enjoy our fast delivery, please allow us to \ndetect your location."
            android:textSize="11sp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp"
            android:gravity="center"
            android:textColor="#666" />

        <Button
            android:id="@+id/btn_turn_on_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#000000"
            android:text="Turn on location service"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

        <Button
            android:id="@+id/not_now_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#000000"
            android:text="Not Now"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
