<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <!-- Main Content (Google Map with Search and Buttons) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Google Maps Fragment -->
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="FragmentTagUsage" />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center" />

            <!-- Floating Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:orientation="horizontal"
                android:padding="05dp"
                android:layout_alignParentTop="true"
                android:elevation="8dp">

                <ImageView
                    android:shadowDy="10"
                    android:shadowDx="10"
                    android:elevation="5dp"
                    android:id="@+id/menu_button"
                    android:layout_width="39dp"
                    android:layout_height="40dp"
                    android:background="@drawable/input_text_background"
                    android:src="@drawable/menu"
                    tools:ignore="ContentDescription" />

                <AutoCompleteTextView
                    android:id="@+id/search_bar"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:drawableLeft="@drawable/location_symbol_yellow"
                    android:hint="@string/enter_location"
                    android:drawableRight="@drawable/heart"
                    android:background="@drawable/rounded_white_background"
                    android:drawablePadding="10dp"
                    android:paddingStart="8dp"
                    android:textSize="10sp"
                    android:paddingEnd="8dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    tools:ignore="Autofill,InefficientWeight,RtlHardcoded,TextFields" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/get_current_location"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/rounded_white_background"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/location"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"/>

            </LinearLayout>

            <!-- Bottom Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <!-- Book Ambulance Button -->
                <Button
                    android:id="@+id/book_ambulance_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/book_ambulance"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:drawerLayoutCornerSize="20dp"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>


</androidx.drawerlayout.widget.DrawerLayout>

